    <titles>
      <title lang="hu">Krisztus él</title>
      <title lang="es">¡Cristo vive!</title>
      <title lang="es">Tú me has dado la vida eterna</title>
    </titles>
    <authors>
      <author type="words">Diego Thomas</author>
