    <titles>
      <title>Én Uram, én Istenem</title>
    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <authors>
      <author>DAX</author>
      <author>Fülei Szt. Miklós</author>
    </authors>
    <songbooks>
      <songbook name="Sárga könyv" entry="54"/>
      <songbook name="Kék könyv" entry="214"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Én Uram, én Istenem,<br/>vedd el tőlem mindenem,<br/>ami gátol Feléd!</lines>
    </verse>
    <verse name="v2">
      <lines>Én Uram, én Istenem,<br/>add meg nekem mindenem,<br/>ami segít feléd!</lines>
    </verse>
    <verse name="v3">
      <lines>Én Uram, én Istenem,<br/>fogadd el az életem,<br/>hadd legyek egészen a Tiéd!</lines>
    </verse>
  </lyrics>
</song>
