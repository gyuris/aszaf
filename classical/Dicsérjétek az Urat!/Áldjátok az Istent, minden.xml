    <titles>
      <title>Áldjátok az Istent, minden</title>
    </titles>
    <verseOrder>v1 v2</verseOrder>
    <songbooks>
      <songbook name="Dicsérjétek az Urat!" entry="297b"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Áldjátok az Istent, minden angyalai,<br/>ti erős hatalmak, kik hallván hangját,<br/>megteszitek híven az ő parancsát.</lines>
    </verse>
    <verse name="v2">
      <lines>Uram, mi Urunk!<br/>(*)<br/>mily csodálatos a te neved az egész földön!</lines>
    </verse>
  </lyrics>
