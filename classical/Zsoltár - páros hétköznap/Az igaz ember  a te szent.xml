  <properties>
    <titles>
      <title>Az igaz ember * a te szent</title>
    </titles>
    <verseOrder>v1 v2 v3 v4 v5 v6</verseOrder>
    <songbooks>
      <songbook name="Zsoltár - páros hétköznap" entry="45"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Az igaz ember * a te szent hegyeden pihen, Uram.</lines>
    </verse>
    <verse name="v2">
      <lines>Parancsaid ösvényén * vezess engem, Uram.</lines>
    </verse>
    <verse name="v3">
      <lines>Lámpás a te igéd, Uram, * az én lábaim előtt.</lines>
    </verse>
    <verse name="v4">
      <lines>Uram, menedékünk lettél * nemzedékről nemzedékre.</lines>
    </verse>
    <verse name="v5">
      <lines>Akik könnyek között vetnek, * majd ujjongva aratnak.</lines>
    </verse>
    <verse name="v6">
      <lines>Uram, menedékünk lettél * nemzedékről nemzedékre.</lines>
    </verse>
  </lyrics>
</song>
