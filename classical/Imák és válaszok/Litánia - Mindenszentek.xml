  <properties>
    <titles>
      <title>Litánia - Mindenszentek</title>
    </titles>
    <verseOrder>v1 v2 v3 v4 v5 v6</verseOrder>
    <songbooks>
      <songbook name="Imák és válaszok" entry="67"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Uram, irgalmazz (nekünk)!<br/>Krisztus, kegyelmezz (nekünk)!<br/>Uram, irgalmazz (nekünk)!</lines>
    </verse>
    <verse name="v2">
      <lines>…irgalmazz nekünk!</lines>
    </verse>
    <verse name="v3">
      <lines>…könyörögj(etek) érettünk!</lines>
    </verse>
    <verse name="v4">
      <lines>…ments meg, Uram, minket!</lines>
    </verse>
    <verse name="v5">
      <lines>…kérünk téged, hallgass meg minket!</lines>
    </verse>
    <verse name="v6">
      <lines>Krisztus, hallgass minket!<br/>Krisztus, hallgass meg minket!<br/>…Kegyelmezz nekünk!<br/>…Hallgass meg minket!<br/>…Irgalmazz nekünk!</lines>
    </verse>
  </lyrics>
</song>
