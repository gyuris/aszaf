  <properties>
    <titles>
      <title>Uram, hallgass meg engem</title>
    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <songbooks>
      <songbook name="Zsoltár - vasárnapok" entry="15"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Uram, hallgass meg engem,<br/>* nagy irgalmasságod szerint.</lines>
    </verse>
    <verse name="v2">
      <lines>Adjatok hálát az Úrnak,<br/>* mivel irgalma örökké megmarad.</lines>
    </verse>
    <verse name="v3">
      <lines>Hozzád vágyódik szívem,<br/>* én Uram, Istenem.</lines>
    </verse>
  </lyrics>
</song>
