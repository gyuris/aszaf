  <properties>
    <titles>
      <title>Boldogok, akik Isten útján</title>
    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <authors>
      <author></author>
    </authors>
    <songbooks>
      <songbook name="Zsoltár - vasárnapok" entry="9"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Boldogok, akik Isten útján járnak,<br/>* és törvényét követik.</lines>
    </verse>
    <verse name="v2">
      <lines>Te vagy, Uram, menedékem,<br/>* a szabadulás örömével veszel körül engem.</lines>
    </verse>
    <verse name="v3">
      <lines>Boldog az az ember,<br/>* aki az Úrban bízik.</lines>
    </verse>
  </lyrics>
