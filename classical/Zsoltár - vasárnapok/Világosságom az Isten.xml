  <properties>
    <titles>
      <title>Világosságom az Isten</title>
    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <songbooks>
      <songbook name="Zsoltár - vasárnapok" entry="6"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Világosságom az Isten,<br/>* üdvözít engem.</lines>
    </verse>
    <verse name="v2">
      <lines>Utaidat mutasd meg nékem,<br/>* én Uram, Istenem!</lines>
    </verse>
    <verse name="v3">
      <lines>Uram, Istenem,<br/>* örök életet adó igéid vannak.</lines>
    </verse>
  </lyrics>
</song>
