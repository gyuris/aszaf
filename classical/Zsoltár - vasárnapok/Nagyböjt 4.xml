  <properties>
    <titles>
      <title>Nagyböjt 4.</title>
    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <songbooks>
      <songbook name="Zsoltár - vasárnapok" entry="42"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Az Úr nékem pásztorom,<br/>* ínséget nem kell látnom.</lines>
    </verse>
    <verse name="v2">
      <lines>Ragadjon ínyemhez a nyelvem,<br/>* ha nem emlékezem meg rólad.</lines>
    </verse>
    <verse name="v3">
      <lines>Ízleljétek és lássátok,<br/>* milyen édes az Úr!</lines>
    </verse>
  </lyrics>
