  <properties>
    <titles>
      <title>Magasztaljanak téged a népek</title>
    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <authors>
      <author></author>
    </authors>
    <songbooks>
      <songbook name="Zsoltár - vasárnapok" entry="23"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Magasztaljanak téged a népek, Istenünk,<br/>* magasztaljanak az összes nemzetek.</lines>
    </verse>
    <verse name="v2">
      <lines>Ízleljétek és lássátok,<br/>* milyen édes az Úr!</lines>
    </verse>
    <verse name="v3">
      <lines>Uram, irgalmadban ments meg engem,<br/>* Uram, siess segítségemre.</lines>
    </verse>
  </lyrics>
</song>
