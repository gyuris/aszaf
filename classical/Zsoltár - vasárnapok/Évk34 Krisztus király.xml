    <titles>
      <title>Évk.34. Krisztus király</title>
    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <songbooks>
      <songbook name="Zsoltár - vasárnapok" entry="37"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Az Úr nékem pásztorom,<br/>* ínséget nem kell látnom.</lines>
    </verse>
    <verse name="v2">
      <lines>Az Úr országol, *<br/>királyi fölségbe öltözött.</lines>
    </verse>
    <verse name="v3">
      <lines>Isten házába indulunk,<br/>* örömtől dobban a szívünk.</lines>
    </verse>
  </lyrics>
