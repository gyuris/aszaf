    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <songbooks>
      <songbook name="Zsoltár - vasárnapok" entry="27"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Irgalmas a mi Urunk, Istenünk:<br/>* könyörületre hajlik szíve.</lines>
    </verse>
    <verse name="v2">
      <lines>Az Úr színe előtt járok,<br/>* az élők földjén.</lines>
    </verse>
    <verse name="v3">
      <lines>Felkelek és útnak indulok,<br/>* Atyám házába térek.</lines>
    </verse>
  </lyrics>
