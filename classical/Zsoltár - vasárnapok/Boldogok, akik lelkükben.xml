  <properties>
    <titles>
      <title>Boldogok, akik lelkükben</title>
    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <songbooks>
      <songbook name="Zsoltár - vasárnapok" entry="7"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Boldogok, akik lelkükben szegények:<br/>* övék a mennyek országa.</lines>
    </verse>
    <verse name="v2">
      <lines>Bár hallgatnátok ma Isten szavára:<br/>* „Népem, ne légy kemény szívű.”</lines>
    </verse>
    <verse name="v3">
      <lines>Ajkam hirdeti,<br/>* igazságodat, Uram.</lines>
    </verse>
  </lyrics>
</song>
