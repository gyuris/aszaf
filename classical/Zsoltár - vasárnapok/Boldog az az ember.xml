  <properties>
    <titles>
      <title>Boldog az az ember</title>
    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <songbooks>
      <songbook name="Zsoltár - vasárnapok" entry="36"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Boldog az az ember,<br/>* aki féli az Istent.</lines>
    </verse>
    <verse name="v2">
      <lines>Védelmezz engem, Istenem,<br/>* hiszen tebenned bízom.</lines>
    </verse>
    <verse name="v3">
      <lines>Eljön az Úr ítélni a földet,<br/>* igazságban ítéli az egész világot.</lines>
    </verse>
  </lyrics>
</song>
