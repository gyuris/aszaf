  <properties>
    <titles>
      <title>Törvényedet szívből szeretem</title>
    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <songbooks>
      <songbook name="Zsoltár - vasárnapok" entry="20"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Törvényedet szívből szeretem,<br/>* én Uram, Istenem.</lines>
    </verse>
    <verse name="v2">
      <lines>Megnyitod kezedet, Istenem,<br/>* és táplálsz minket.</lines>
    </verse>
    <verse name="v3">
      <lines>Amely napon hozzád kiáltok,<br/>* hallgass meg engem, Istenem.</lines>
    </verse>
  </lyrics>
</song>
