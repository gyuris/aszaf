<song xmlns="http://openlyrics.info/namespace/2009/song" version="0.8" createdIn="ConvDiatarOpenlyrics" modifiedIn="ConvDiatarOpenlyrics" modifiedDate="2015-06-09T16:45:32">
  <properties>
    <titles>
      <title>Uram, irgalmazz nekünk</title>
    </titles>
    <verseOrder>v1 v2 v3 v4</verseOrder>
    <songbooks>
      <songbook name="Éneklő Egyház" entry="836"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Uram, irgalmazz nekünk!<br/>Krisztus, kegyelmezz nekünk!<br/>Uram irgalmazz nekünk!<br/>Krisztus, hallgass minket!<br/>Krisztus, hallgass meg minket!</lines>
    </verse>
    <verse name="v2">
      <lines>…Könyörögj értünk!<br/>…Könyörögjetek értünk!</lines>
    </verse>
    <verse name="v3">
      <lines>…Ments meg, Uram, minket!</lines>
    </verse>
    <verse name="v4">
      <lines>…Kérünk téged, hallgass meg!</lines>
    </verse>
  </lyrics>
</song>
