  <properties>
    <titles>
      <title>Alleluja… Keressétek előbb</title>
    </titles>
    <verseOrder>c1 v1 c1 v2</verseOrder>
    <authors>
      <author>ismeretlen szerző</author>
    </authors>
    <songbooks>
      <songbook name="Sárga könyv" entry="11"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Keressétek előbb Isten országát, és az Ő igazságát,<br/>és mindenek megadatnak néktek, Alleluja, alleluja!</lines>
    </verse>
    <verse name="c1">
      <lines>Alleluja, allelu-alleluja, alleluja, alleluja!</lines>
    </verse>
    <verse name="v2">
      <lines>Nemcsak kenyérrel él az ember, hanem minden igével,<br/>mely az Isten szájából származik, alleluja-alleluja !</lines>
    </verse>
  </lyrics>
</song>
