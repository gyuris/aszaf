    <titles>
      <title>Életem csak kegyelem</title>
    </titles>
    <verseOrder>v1 c1 v2 c1 v3 c1 v4 c1</verseOrder>
    <authors>
      <author>ismeretlen</author>
    </authors>
    <songbooks>
      <songbook name="Sárga könyv" entry="68"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Életem csak kegyelem, önérdemem nincs...</lines>
    </verse>
    <verse name="c1">
      <lines>„Veled vagyok naponta,<br/>kezeidet megfogva,<br/>te csak bízzál karomban!"<br/>- mondja az Úr.</lines>
    </verse>
    <verse name="v3">
      <lines>Szeretete igazgat ellát tanáccsal...</lines>
    </verse>
    <verse name="v4">
      <lines>Hűen vezet utamon, nem hagy magamra...</lines>
    </verse>
    <verse name="v2">
      <lines>Régi énem leküzdöm nagy erejével...</lines>
    </verse>
  </lyrics>
</song>
