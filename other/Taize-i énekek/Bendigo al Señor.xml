  <properties>
    <titles>
      <title>Bendigo al Señor</title>
    </titles>
    <verseOrder>v1 v2</verseOrder>
    <songbooks>
      <songbook name="Taize-i énekek" entry="108"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Bendigo al Señor porque'escucha mi voz,<br/>el Señor es mi fuerza, confia mi corazón.</lines>
    </verse>
    <verse name="v2">
      <lines>Az Úr hallja imám, hogyha hívom, válaszol.<br/>Jó az Úr, benne bízom, a nevét magasztalom.</lines>
    </verse>
  </lyrics>
</song>
