<?xml version='1.0' encoding='UTF-8'?>
<song xmlns="http://openlyrics.info/namespace/2009/song" version="0.8" createdIn="OpenLP 2.4.6" modifiedIn="OpenLP 2.4.6" modifiedDate="2019-10-01T15:03:18">
  <properties>
    <titles>
      <title>Eljön Õ, készen állj</title>
    </titles>
    <authors>
      <author>ismeretlen szerző</author>
    </authors>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Eljön Ő, készen állj,<br/>elvisz, kit készen talál.<br/>Jézus, az ki olajjal<br/>Tölti meg a lámpádat.</lines>
    </verse>
    <verse name="c1a">
      <lines>Világíts! Világíts!<br/>Világíts életeddel!</lines>
    </verse>
    <verse name="c1b">
      <lines>Világíts! Világíts!<br/>Világíts az életeddel már!<br/>Ha újra visszajön,<br/>hogy világítva várd!</lines>
    </verse>
  </lyrics>
</song>
