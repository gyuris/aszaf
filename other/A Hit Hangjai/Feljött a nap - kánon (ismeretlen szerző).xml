<song xmlns="http://openlyrics.info/namespace/2009/song" version="0.8" createdIn="OpenLP 2.4.6" modifiedIn="OpenLP 2.4.6" modifiedDate="2019-10-01T15:02:59">
  <properties>
    <titles>
      <title>Feljött a nap - kánon</title>
    </titles>
    <authors>
      <author>ismeretlen szerző</author>
    </authors>
    <songbooks>
      <songbook name="A Hit Hangjai" entry="218a"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>1. Feljött a nap, <br/>Keressed hát <br/>Jézus szavát, <br/>Akaratát!</lines>
    </verse>
    <verse name="v2">
      <lines>2. Lement a nap, <br/>Fogadd el hát <br/>Minden bűnöd <br/>Bocsánatát!</lines>
    </verse>
    <verse name="v3">
      <lines>3. Elmúlt a nap, <br/>Felejtd el hát <br/>Minden baját! <br/>Jó éjszakát!</lines>
    </verse>
  </lyrics>
</song>
